# PlaceNxt â€” Media Service Environment Variables

# Server
PORT=3014
NODE_ENV=development

# Database
DATABASE_URL=postgresql://placenxt:placenxt123@localhost:5432/placenxt_db?schema=public

# Redis
REDIS_URL=redis://localhost:6379

# JWT (same as auth-service)
JWT_SECRET=your-jwt-secret-key-here

# MediaSoup SFU
MEDIASOUP_LISTEN_IP=0.0.0.0
MEDIASOUP_ANNOUNCED_IP=127.0.0.1   # set to server's public IP in production
MEDIASOUP_RTC_MIN_PORT=10000
MEDIASOUP_RTC_MAX_PORT=10999

# TURN/STUN (production: use coturn or a managed TURN provider)
TURN_URL=turn:localhost:3478
TURN_USERNAME=turnuser
TURN_CREDENTIAL=turnpassword
STUN_URL=stun:stun.l.google.com:19302

# MinIO (S3-compatible storage for meeting recordings)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=meetings

# Internal service URLs
INTERVIEW_SERVICE_URL=http://localhost:3007
ADMIN_SERVICE_URL=http://localhost:3011
