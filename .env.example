# PlaceNxt — Environment Variables
# Copy this file to .env and fill in all values before running

# ─── Database ────────────────────────────────────────────────────────────────
DB_USER=placenxt
DB_PASSWORD=change-me-in-production
DB_NAME=placenxt_db
DATABASE_URL=postgresql://placenxt:change-me-in-production@localhost:5432/placenxt_db

# ─── JWT ─────────────────────────────────────────────────────────────────────
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-min-64-chars-change-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# ─── Redis ────────────────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379
# Production: set a password
REDIS_PASSWORD=

# ─── MinIO (S3-compatible storage) ───────────────────────────────────────────
MINIO_USER=minioadmin
MINIO_PASSWORD=minioadmin123
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_BUCKET=resumes

# ─── AI / LLM ─────────────────────────────────────────────────────────────────
# OpenAI (scoring, skill analysis)
OPENAI_API_KEY=

# Groq (fast Whisper transcription, interview copilot) — free tier available
# Get key: https://console.groq.com/keys
GROQ_API_KEY=

# ─── Job APIs ─────────────────────────────────────────────────────────────────
# JSearch via RapidAPI (optional, free tier)
# Get key: https://rapidapi.com/letscrape-6bRBa3QguO5/api/jsearch
JSEARCH_API_KEY=

# ─── Payments ─────────────────────────────────────────────────────────────────
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# ─── Google OAuth / Calendar ─────────────────────────────────────────────────
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Redirect URI registered in Google Cloud Console
GOOGLE_REDIRECT_URI=http://localhost:3012/recruiter/calendar/google/callback

# ─── Microsoft / Outlook Calendar ────────────────────────────────────────────
MS_CLIENT_ID=
MS_CLIENT_SECRET=
MS_REDIRECT_URI=http://localhost:3012/recruiter/calendar/outlook/callback

# ─── Email / SMTP ─────────────────────────────────────────────────────────────
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@placenxt.com

# ─── Admin ───────────────────────────────────────────────────────────────────
# Comma-separated list of admin email addresses
ADMIN_EMAILS=admin@placenxt.com

# ─── Vector Search (Talent Sourcing) ─────────────────────────────────────────
PINECONE_API_KEY=
PINECONE_INDEX=placenxt-candidates

# ─── WebRTC / Media Service ───────────────────────────────────────────────────
# Public IP of the server hosting media-service (for MediaSoup SFU)
MEDIASOUP_ANNOUNCED_IP=
MEDIASOUP_LISTEN_IP=0.0.0.0
MEDIASOUP_RTC_MIN_PORT=10000
MEDIASOUP_RTC_MAX_PORT=10999
# TURN server (Coturn or Twilio NTS)
TURN_URL=turn:localhost:3478
TURN_USERNAME=turnuser
TURN_CREDENTIAL=turnpassword

# ─── Internal Service URLs (for local dev — override per environment) ─────────
AUTH_SERVICE_URL=http://localhost:3001
RESUME_SERVICE_URL=http://localhost:3002
SCORING_SERVICE_URL=http://localhost:3003
SKILL_SERVICE_URL=http://localhost:3004
JOB_SERVICE_URL=http://localhost:3005
APPLICATION_SERVICE_URL=http://localhost:3006
INTERVIEW_SERVICE_URL=http://localhost:3007
VALIDATION_SERVICE_URL=http://localhost:3008
BILLING_SERVICE_URL=http://localhost:3010
ADMIN_SERVICE_URL=http://localhost:3011
RECRUITER_SERVICE_URL=http://localhost:3012
EMAIL_SERVICE_URL=http://localhost:3013
MEDIA_SERVICE_URL=http://localhost:3014

# ─── Frontend ─────────────────────────────────────────────────────────────────
NEXT_PUBLIC_API_URL=http://localhost:3000/api/v1
NEXT_PUBLIC_MEDIA_SERVICE_URL=http://localhost:3014
