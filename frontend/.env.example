# Medhiva Frontend Environment Variables
# Copy this file to .env.local for local development

# API URL - Required
# For local development: http://localhost:3000/api/v1
# For production: https://your-api-domain.com/api/v1
NEXT_PUBLIC_API_URL=

# Razorpay Key ID for payments
# Use test key for development, live key for production
NEXT_PUBLIC_RAZORPAY_KEY_ID=

# Google OAuth Client ID (for "Sign in with Google" on login/signup pages)
# Get from: Google Cloud Console → APIs & Services → Credentials → OAuth 2.0 Client ID
NEXT_PUBLIC_GOOGLE_CLIENT_ID=

# Email Service URL (optional - for email tracking feature)
# NEXT_PUBLIC_EMAIL_SERVICE_URL=
