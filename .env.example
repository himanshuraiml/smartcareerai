# Medhiva Environment Variables
# Copy this file to .env and fill in your values

# Database
DB_USER=smartcareer
DB_PASSWORD=smartcareer123
DB_NAME=smartcareer_db
DATABASE_URL=postgresql://smartcareer:smartcareer123@localhost:5432/smartcareer_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Redis
REDIS_URL=redis://localhost:6379

# MinIO (S3-compatible storage)
MINIO_USER=minioadmin
MINIO_PASSWORD=minioadmin123
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_BUCKET=resumes

# OpenAI API (for LLM scoring)
OPENAI_API_KEY=your-openai-api-key

# Google Gemini API (alternative LLM)
GEMINI_API_KEY=

# Groq API (FREE - recommended for testing)
# Get your key at: https://console.groq.com/keys
GROQ_API_KEY=

# JSearch API (RapidAPI - optional, free tier)
# Get your key at: https://rapidapi.com/letscrape-6bRBa3QguO5/api/jsearch
JSEARCH_API_KEY=

# Service URLs (for local development)
AUTH_SERVICE_URL=http://localhost:3001
RESUME_SERVICE_URL=http://localhost:3002
SCORING_SERVICE_URL=http://localhost:3003
SKILL_SERVICE_URL=http://localhost:3004
JOB_SERVICE_URL=http://localhost:3005
APPLICATION_SERVICE_URL=http://localhost:3006

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3000
